
<div class= "show-global">
  <div class="pp-show ">
    <h1><%= @party_place.name %></h1>

    <div class="card-pp">

      <%= cl_image_tag @party_place.picture.key,
          width: 400, height: 360, crop: :fill, class: "card-pp-img" %>

      <div class="card-pp-infos">
        <div class="card-pp-descr mb-5">
          <p><%= @party_place.description %></p>
        </div>
      <div class="card-pp-adress">
        <p><i class="fas fa-map-marker-alt mr-3"></i><%= @party_place.address %> </p>
        </div>
        <div class="card-pp-price">
        <p><i class="fas fa-hand-holding-usd mr-3"></i><%= @party_place.price_per_day %> € / jour</p>
      </div>
    </div>

    <div class="form p-5 d-flex flex-column w-25">
      <%= simple_form_for([@party_place, @reservation]) do |f| %>

      <%= f.input :date_begin, label: 'Date de début', as: :date, html5: true %>
      <%= f.input :date_end, label: 'Date de fin', as: :date, html5: true %>


      <div class="d-flex justify-content-center">
      <%= f.button :submit, 'Louez-moi', class: "btn btn-flat justify-content-center" %>
      </div>
    <% end %>
    </div>

    </div>
  </div>
</div>
<div class="img-pinte">
    <%= image_tag "pinte.png", width:100, height:130 %>
</div>

<div class="img-vinyl">
    <%= image_tag "vinyl.png", width:300, height:300 %>
</div>







